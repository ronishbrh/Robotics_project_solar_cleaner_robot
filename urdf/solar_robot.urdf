<?xml version="1.0"?>
<robot name="solar_robot">

  <!-- Base: Orange for high visibility -->
  <link name="base_link">
    <visual>
      <geometry><box size="0.4 0.3 0.1"/></geometry>
    </visual>
    <collision>
      <geometry><box size="0.4 0.3 0.1"/></geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>
  <gazebo reference="base_link">
    <material>Gazebo/Orange</material>
  </gazebo>

  <!-- Leg: Dark Grey/Metallic -->
  <link name="leg1_upper">
    <visual>
      <geometry><cylinder length="0.15" radius="0.02"/></geometry>
    </visual>
    <collision>
      <geometry><cylinder length="0.15" radius="0.02"/></geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>
  <gazebo reference="leg1_upper">
    <material>Gazebo/DarkGrey</material>
  </gazebo>

  <joint name="leg1_hip_joint" type="revolute">
    <parent link="base_link"/>
    <child link="leg1_upper"/>
    <origin xyz="0.15 0.15 -0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit effort="10.0" velocity="1.0" lower="-1.0" upper="1.0"/>
  </joint>

  <!-- Foot: Bright Red Suction Cup -->
  <link name="leg1_foot">
    <visual>
      <geometry><sphere radius="0.03"/></geometry>
    </visual>
    <collision>
      <geometry><sphere radius="0.03"/></geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>
  <gazebo reference="leg1_foot">
    <material>Gazebo/Red</material>
  </gazebo>

  <joint name="leg1_knee_joint" type="revolute">
    <parent link="leg1_upper"/>
    <child link="leg1_foot"/>
    <origin xyz="0 0 -0.15" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit effort="10.0" velocity="1.0" lower="-1.2" upper="0.0"/>
  </joint>

</robot>
